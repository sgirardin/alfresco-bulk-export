<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>
<beans>

    <bean id="org.alfresco.extensions.bulkexport.jobs.ScheduledExportExecuter"
          class="org.alfresco.extensions.bulkexport.jobs.ScheduledExportExecuter">
        <property name="serviceRegistry">
            <ref bean="ServiceRegistry" />
        </property>
    </bean>

    <bean id="bulkExportTrigger" class="org.alfresco.util.CronTriggerBean">
        <property name="jobDetail">
            <bean id="bulkExportJobTrigger" class="org.springframework.scheduling.quartz.JobDetailBean">
                <property name="jobClass">
                    <value>org.alfresco.extensions.bulkexport.jobs.ScheduledExport</value>
                </property>
                <property name="jobDataAsMap">
                    <map>
                        <entry key="interrupt">
                            <value>false</value>
                        </entry>
                        <entry key="nodeRef">
                            <value>ENTER nodeRef</value>
                        </entry>
                        <entry key="exportBasePath">
                            <value>ENTER export path</value>
                        </entry>
                        <entry key="ignoreExported">
                            <value>ENTER true / false</value>
                        </entry>
                        <entry key="exportVersion">
                            <value>ENTER true / false</value>
                        </entry>
                        <entry key="useNodeCache">
                            <value>ENTER true / false</value>
                        </entry>
                        <entry key="noOfThreads">
                            <value>ENTER no of Threads to create</value>
                        </entry>
                        <entry key="exportChunkSize">
                            <value>ENTER export chunk size</value>
                        </entry>
                        <entry key="jobExecuter">
                            <ref bean="org.alfresco.extensions.bulkexport.jobs.ScheduledExportExecuter" />
                        </entry>
                        <entry key="jobLockService">
                            <ref bean="jobLockService" />
                        </entry>
                    </map>
                </property>
            </bean>
        </property>
        <property name="scheduler">
            <ref bean="schedulerFactory" />
        </property>
        <property name="cronExpression">
            <value>0 0/2 * * * ?</value>
        </property>
    </bean>

    <bean id="bulkExportInterruptor" class="org.alfresco.util.CronTriggerBean">
        <property name="jobDetail">
            <bean id="bulkExportJobInterruptor" class="org.springframework.scheduling.quartz.JobDetailBean">
                <property name="jobClass">
                    <value>org.alfresco.extensions.bulkexport.jobs.ScheduledExport</value>
                </property>
                <property name="jobDataAsMap">
                    <map>
                        <entry key="interrupt">
                            <value>true</value>
                        </entry>
                        <entry key="jobExecuter">
                            <ref bean="org.alfresco.extensions.bulkexport.jobs.ScheduledExportExecuter" />
                        </entry>
                        <entry key="jobLockService">
                            <ref bean="jobLockService" />
                        </entry>
                    </map>
                </property>
            </bean>
        </property>
        <property name="scheduler">
            <ref bean="schedulerFactory" />
        </property>
        <property name="cronExpression">
            <value>0 0/2 * * * ?</value>
        </property>
    </bean>

</beans>